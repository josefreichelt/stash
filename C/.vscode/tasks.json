{
    "tasks": [
        {
            "type": "process",
            "label": "C build active file",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "./bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": ["createbin"]
        },
        {
            "label": "createbin",
            "type": "shell",
            "command": "mkdir -p ${relativeFileDirname}/bin"
        }
    ],
    "version": "2.0.0"
}
