{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "buildcpp",
            "command": "clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-Wall",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "compiler: /usr/local/opt/llvm/bin/clang++",
            "dependsOn": ["prepareBinFolder"]
        },
        {
            "type": "cppbuild",
            "label": "buildcppwin",
            "command": "C://bin/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-Wall",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "compiler: /usr/local/opt/llvm/bin/clang++",
            "dependsOn": ["prepareBinFolder"]
        },
        {
            "label": "prepareBinFolder",
            "command": "rm -rfv ./bin && mkdir -p -v bin",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
